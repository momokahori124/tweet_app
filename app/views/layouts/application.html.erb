<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    <header>
    <div class="header-logo">
      <%=link_to("TweetApp","/") %>
    </div>
    <ul class="header-menus">
      
      <% if @current_user %>
        <li>
          <%=link_to(@current_user.name, "/users/#{@current_user.id}") %>
        </li>
        <li>
          <%=link_to("Posts","/posts/index") %>
        </li>
        <li>
          <%=link_to("New Post", "/posts/new")%>
        </li>
        <li>
          <%=link_to("User List", "/users/index")%>
        </li>
        <li>
          <%=link_to("Logout", "/logout")%>
        </li>
      <% else %>
        <li>
          <%=link_to("About TweetApp","/about") %>
        </li>
        <li>
        <%=link_to("Registration", "/signup")%>
        </li>
        <li>
        <%=link_to("Login", "/login")%>
        </li>
      <% end %>
    </ul>
  </header>

  <!-- flash -->
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

    <!-- 各ビューファイルは以下のyieldに代入され、application.html.erbの一部となる -->
      <%= yield %>
  </body>
</html>
